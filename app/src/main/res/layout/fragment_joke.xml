<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/joke_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="70dp"
        android:layout_marginTop="120dp"
        android:text="Joke example sample text"
        android:textSize="32sp" />
    <ImageView
        android:id="@+id/is_starred_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/ic_baseline_star_24"
        android:backgroundTint="@color/light_pink"
        app:layout_constraintTop_toTopOf="@+id/joke_text"
        app:layout_constraintRight_toLeftOf="@+id/joke_text"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/star_joke_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_star_24" />


</androidx.constraintlayout.widget.ConstraintLayout>