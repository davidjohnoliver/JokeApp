<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/navigation_random">
    <fragment
        android:id="@+id/navigation_random"
        android:name="com.dissolutegames.dadjokeapp.ui.random.RandomFragment"
        android:label="@string/title_random"
        tools:layout="@layout/fragment_random">
        <action
            android:id="@+id/nav_action_random_to_joke"
            app:destination="@id/navigation_joke">
            <argument
                android:name="jokeId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_starred"
        android:name="com.dissolutegames.dadjokeapp.ui.starred.StarredFragment"
        android:label="@string/title_starred"
        tools:layout="@layout/fragment_starred">
        <action
            android:id="@+id/nav_action_starred_to_joke"
            app:destination="@id/navigation_joke">
            <argument
                android:name="jokeId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_joke"
        android:name="com.dissolutegames.dadjokeapp.ui.joke.JokeFragment"
        android:label="Joke"
        tools:layout="@layout/fragment_joke">
        <argument
            android:name="jokeId"
            app:argType="string" />
    </fragment>
</navigation>